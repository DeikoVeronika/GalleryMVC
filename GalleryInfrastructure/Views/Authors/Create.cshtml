@model GalleryDomain.Model.Author

@{
    ViewData["Title"] = "Додавання";
}
<div class="margin_top_50"></div>


<h4>Додавання фотографа</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Введіть ім'я та прізвище автора" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountryId" class="control-label"></label>
                <select asp-for="CountryId" class ="form-control" asp-items="ViewBag.CountryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Biography" class="control-label"></label>
                <textarea id="biography" asp-for="Biography" class="form-control" placeholder="Розкажіть про себе..."></textarea>
                <span asp-validation-for="Biography" class="text-danger"></span>
            </div>
            <div class="form-group d-flex " style = "margin-top: 5px; gap: 10px;">
                <input type="submit" value="Додати" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-light">Всі фотографи</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/site.js"></script>
}

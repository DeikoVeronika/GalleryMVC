@* to delete *@

@model IEnumerable<GalleryDomain.Model.Country>

@{
    ViewData["Title"] = "Країни";
}
<div class="margin_top_50"></div>

<div class="d-flex justify-content-between ">
    <h1>Країни</h1>
    <p>
        <a asp-action="Create" class="btn btn-light">Додати країну</a>
    </p>
</div>
<div class="list-group">
    @foreach (var item in Model)
    {
        <div class="list-group-item d-flex justify-content-between align-items-center">
            <span>@Html.DisplayFor(modelItem => item.Name)</span>
            <div>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Редагувати</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Переглянути фотографів з цієї країни</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Видалити</a>
            </div>
        </div>
    }
</div>


@model GalleryDomain.Model.Country

@{
    ViewData["Title"] = "Створення";
}
<div class="margin_top_50"></div>


<h4>Створення</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group d-flex " style="margin-top: 5px; gap: 10px;">
                <input type="submit" value="Додати" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-light">Всі країни</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/site.js"></script>
}
